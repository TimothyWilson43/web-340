<head>

    <meta charset="UTF-8">

    <title>Employee Managment System</title>

    <!-- Stylesheet - Bootstrap -->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
        integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

</head>

<body>
    <% include header %>
    <div role="main" class="container" style="width: 50%;">
        <br /><br />

        <% if (employees.length) { %>
        <h2>Employee Listing</h2><br />
        <a href="/new">Add New</a>
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Functions</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(function (entry) { %>
                <tr>
                    <td><%= entry.name %></td>
                    <td><a href="/view/<%= entry.name %>">VIEW</a></td>
                </tr>
            </tbody>
            <% }) %>
        </table>
        <% } else { %>
        No entries! <a href="/new">Add one!</a>
        <% } %>

        <br />
    </div>
    <% include scripts %>
    <% include footer %>

</body>

</html>